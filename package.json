{
	"name": "@diegovester/zeroday",
	"version": "0.0.0",
	"description": "{description}",
	"license": "MIT",
	"author": {
		"name": "Samantha",
		"url": "https://github.com/diegovester"
	},
	"keywords": [
		"typescript"
	],
	"bugs": "https://github.com/diegovester/zeroday/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/diegovester/zeroday.git"
	},
	"funding": {
		"type": "individual",
		"url": "https://github.com/sponsors/diegovester"
	},
	"type": "module",
	"main": "./dist/diegovester.umd.js",
	"module": "./dist/diegovester.es.js",
	"exports": {
		".": {
			"import": "./dist/diegovester.es.js",
			"require": "./dist/diegovester.umd.js"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"build": "vite build",
		"build:typedoc": "npx typedoc",
		"build:typedoc-watch": "npm run build:typedoc -- --watch",
		"build:all": "npm run build && npm run build:typedoc",
		"clean": "rm -rf ./dist/ ./docs/typedocs/ ./node_modules && rm -rf ./package-lock.json",
		"reinstall": "npm run clean && npm install",
		"deploy": "gh-pages -d ./docs/typedocs",
		"test": "vitest --coverage",
		"test:ci": "npm run test -- run",
		"test:ui": "npm run test -- --ui",
		"test:watch": "npm run test -- --watch",
		"test:all": "npm run test:ci && npm run lint",
		"lint": "eslint src --ext .ts,.tsx",
		"lint:fix": "npm run lint -- --fix",
		"prepare": "npm run build",
		"prepublishOnly": "npm run test:all",
		"preversion": "npm run lint",
		"version": "npm run lint && git add -A src",
		"postversion": "git push && git push --tags"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "6.7.5",
		"@typescript-eslint/parser": "6.7.5",
		"@vitest/coverage-v8": "^0.33.0",
		"@vitest/ui": "^0.33.0",
		"eslint": "8.51.0",
		"gh-pages": "4.0.0",
		"typedoc": "0.25.2",
		"typescript": "5.2.2",
		"vite": "^4.4.3",
		"vite-plugin-dts": "^3.2.0",
		"vitest": "^0.33.0"
	}
}
